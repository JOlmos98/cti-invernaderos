generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recipe {
  id String @id @default(cuid())
  name String
  servings Int?
  prepTime Int?
  ingredients String?
  instructions String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String @default("Sin password")
  //posts Post[]
}

